<Page
    x:Class="PhenoPad.NoteViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhenoPad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:phenotypeservice="using:PhenoPad.PhenotypeService"
    xmlns:customcontrol="using:PhenoPad.CustomControl"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--TOP MENU BAR-->
        <Grid Name="TopMenuRelativePanel" Grid.Row="0" Grid.ColumnSpan="2" 
              Background="{StaticResource TITLE_BAR_WHITE}">
            
            
            <StackPanel Orientation="Horizontal" Spacing="30" >
                
                <Button Name="BackButton"
                        Click="BackButton_Clicked"
                        Width="70"
                        Background="{StaticResource Button_Background}" 
                        BorderThickness="0" VerticalAlignment="Stretch">
                    <SymbolIcon Symbol="Back"/>
                </Button>
                
                <TextBlock Name="noteNameTextBox" FontSize="18" Text="" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Spacing=" 30" Margin="5 5 30 5"  HorizontalAlignment="Right">
                <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" PlaceholderText="Sort by" Width="100">
                    <x:String>Datetime</x:String>
                    <x:String>Line Number</x:String>
                </ComboBox>
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <SymbolIcon Symbol="Find"/>
                    <TextBox x:Name="searchInpput" Width="300"/>
                    <Button Content="Find" Style="{StaticResource ButtonStyle1}" x:Name="searchButtin" Width="auto"/>
                </StackPanel>


            </StackPanel>
        </Grid>
        
        <!--SIDE FILTER BAR-->
        <StackPanel BorderThickness="0 0 1 0" BorderBrush="{StaticResource TITLE_BAR_WHITE}" 
                    HorizontalAlignment="Right" Padding="0 30 0 30"
                    x:Name="FilterStack" Orientation="Vertical" 
                    Grid.Row="1" Grid.Column="0" Spacing="10">
            <ToggleButton Style="{StaticResource MyToggleButtonStyle}" Width="40" Height="100"/>
            <ToggleButton Style="{StaticResource MyToggleButtonStyle}" Width="40" Height="100"/>
            <ToggleButton Style="{StaticResource MyToggleButtonStyle}" Width="40" Height="100"/>
        </StackPanel>
        
        <!--OVERVIEW CONTENT PANEL-->
        <StackPanel Orientation="Vertical" x:Name="NoteLineStack" 
                    Grid.Row="1" Grid.Column="1" Spacing="10" Padding="10"
                    Background="Transparent"/>
        <!--TODO: DATA TEMPLATE CUSTOM CONTROL-->




        <!--Timeline/category bar--><!--
        <Grid Grid.Column="0" Grid.Row="1" >
            <ListView ScrollViewer.VerticalScrollBarVisibility="Hidden" x:Name="TimeListView" Padding="3 0" 
                      >
                <ListView.Header>
                    <controls:ScrollHeader Mode="Sticky" TargetListViewBase="{x:Bind PhenoListView}">
                        <StackPanel Background="White">
                            <TextBlock  Foreground="{StaticResource WORD_DARKER}" Text="Timeline" FontSize="16" 
                                        FontWeight="SemiBold" Padding="5"/>
                        </StackPanel>
                    </controls:ScrollHeader>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="phenotypeservice:Phenotype">
                        <TextBlock Text="{x:Bind time}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="Padding" Value="5,0,0,0" />
                        <Setter Property="MinHeight" Value="20" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>


        </Grid>
        --><!--Phenotypes section--><!--
        <Grid Grid.Column="1" Grid.Row="1">
            <ListView ScrollViewer.VerticalScrollBarVisibility="Hidden" x:Name="PhenoListView" Padding="3 0" 
                      >
                <ListView.Header>
                    <controls:ScrollHeader Mode="Sticky" TargetListViewBase="{x:Bind PhenoListView}">
                        <StackPanel Background="White">
                            <TextBlock  Foreground="{StaticResource WORD_DARKER}" Text="Saved phenotypes" FontSize="16" FontWeight="SemiBold" Padding="5"/>
                        </StackPanel>
                    </controls:ScrollHeader>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="phenotypeservice:Phenotype">
                        <customcontrol:PhenotypeControl phenotypeName="{x:Bind name}" 
                                                        phenotypeId="{x:Bind hpId}" 
                                                        phenotypeState="{x:Bind state}" 
                                                        sourceType="Saved"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="Padding" Value="5,0,0,0" />
                        <Setter Property="MinHeight" Value="20" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Grid>
        --><!--Strokes Section--><!--
        <Grid Grid.Column="2" Grid.Row="1" Background="LightGray" >
            <StackPanel x:Name="strokesGrid" Orientation="Vertical" Spacing="10"/>

        </Grid>-->

    </Grid>
</Page>
