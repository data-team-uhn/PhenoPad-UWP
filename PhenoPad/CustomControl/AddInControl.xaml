<UserControl
    x:Class="PhenoPad.CustomControl.AddInControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhenoPad.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:photovideoservice="using:PhenoPad.PhotoVideoService"
    xmlns:customcontrol="using:PhenoPad.CustomControl"
    xmlns:media="using:Windows.UI.Xaml.Media"
    xmlns:core="using:System"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="UserControl_Loaded"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <x:Double x:Key="categoryButtonHeight">60</x:Double>
            <x:Double x:Key="categoryButtonFontSize">27</x:Double>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="WhiteSmoke" BorderBrush="LightGray" Name="OutlineGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Name="contentGrid" Grid.Row="2">

            <!-- The canvas where we render the replacement text and shapes. -->
            <!--
            <Canvas x:Name="recognitionCanvas" />
            -->
            <!-- The canvas for ink input. -->
            <!--
            <InkCanvas x:Name="inkCanvas" />
            -->


        </Grid>
        <Grid Name="categoryGrid"  Grid.Row="2">

            <StackPanel Name="SelectionStackPanel"  Width="200"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Background="Transparent" Style="{StaticResource MyButtonStyle}" HorizontalAlignment="Stretch" Click="DrawingButton_Click"  Name="DrawingButton" Height="{StaticResource categoryButtonHeight}">
                    <TextBlock FontSize="{StaticResource categoryButtonFontSize}" >Drawing</TextBlock>
                </Button>
                <Button Background="Transparent" Style="{StaticResource MyButtonStyle}" HorizontalAlignment="Stretch" Name="InsertPhotoButton" Click="InsertPhotoButton_Click" Height="{StaticResource categoryButtonHeight}">
                    <TextBlock FontSize="{StaticResource categoryButtonFontSize}" >Insert a image</TextBlock>
                </Button>
                <Button Background="Transparent" Style="{StaticResource MyButtonStyle}" HorizontalAlignment="Stretch" Name="TakePhotoButton" Click="TakePhotoButton_Click" Height="{StaticResource categoryButtonHeight}">
                    <TextBlock FontSize="{StaticResource categoryButtonFontSize}" >Take a photo</TextBlock>
                </Button>
            </StackPanel>
        </Grid>



        <!--
        <StackPanel Name="ControlStackPanel" Visibility="Collapsed" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button VerticalAlignment="Top" Style="{StaticResource MyButtonStyle}" Foreground="Black" Background="{StaticResource Title_Background}" Margin="0 -32 0 0" Click="EditButton_Click">
                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                    <SymbolIcon Symbol="Edit" Foreground="{StaticResource WORD_DARK}" Margin="0,0,10,0" />
                    <TextBlock Text="Edit" />
                </StackPanel>
            </Button>
            <Button VerticalAlignment="Top" Style="{StaticResource MyButtonStyle}" Foreground="Black" Background="{StaticResource Title_Background}" Margin="0 -32 0 0">
                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                    <SymbolIcon Symbol="Edit" Foreground="{StaticResource WORD_DARK}" Margin="0,0,10,0" />
                    <TextBlock Text="Edit" />
                </StackPanel>
            </Button>
        </StackPanel>
        -->


        <RelativePanel Name="TitleRelativePanel" Grid.Row="1" Visibility="Visible" Background="WhiteSmoke">


            <Button Style="{StaticResource MyButtonStyle}" Background="Transparent" Foreground="Gray" 
                    Height="35" VerticalAlignment="Top" Width="35" Padding="0" Name="deleteButton" Click="Delete_Click" Margin="6,6,-6,-6">
                <SymbolIcon Symbol="Clear" Height="35" Width="35" Margin="-1,-1,-3,-3" HorizontalAlignment="Left"></SymbolIcon>
            </Button>
        </RelativePanel>

        <InkToolbar x:Name="inkToolbar" Background="LightGray"   Visibility="Collapsed"  Grid.Row="1" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Right" 
        Orientation="Horizontal"   />
        
        <Button Height="40" Width="50" Name="PhotoButton" Click="PhotoButton_Click" Foreground="Black" Background="WhiteSmoke" 
                Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 20 0"  Visibility="Collapsed">
            <SymbolIcon Symbol="Camera" />
        </Button>
        <!-- Photo service -->
        <Grid Background="WhiteSmoke" Grid.Row="2"
              Name="CameraCanvas"
              RelativePanel.AlignRightWithPanel="True" Visibility="Collapsed">
            <photovideoservice:PhotoVideoCaptureControl x:Name="captureControl"></photovideoservice:PhotoVideoCaptureControl>
            <!--
            <StackPanel Height="30" VerticalAlignment="Top" Background="WhiteSmoke" Orientation="Horizontal">
                
                <Button  Height="30" Width="40" Click="CameraClose_Click" Background="WhiteSmoke" Foreground="Gray">
                    <SymbolIcon Symbol="Clear" ></SymbolIcon>
                </Button>
               
                <TextBlock VerticalAlignment="Center" FontSize="16" Margin="20 0 0 0" Text="Camera"/>
                 
            </StackPanel>
            -->
            <StackPanel Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal" >

                <!--<Button Height="30" Width="40" Name="VideoButton" Click="VideoButton_Click" IsEnabled="False" Background="WhiteSmoke">
                    <Grid>
                        <Ellipse x:Name="StartRecordingIcon" Fill="Red" Width="10" Height="10"/>
                        <Rectangle x:Name="StopRecordingIcon" Fill="White" Width="20" Height="20" Visibility="Collapsed"/>
                    </Grid>
                </Button>-->

            </StackPanel>

        </Grid>

        <ScrollViewer  Grid.Row="2" x:Name="scrollViewer" Visibility="Collapsed" ZoomMode="Enabled" MinZoomFactor="1" 
                           VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Enabled" 
                       HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="scrollGrid">

                <InkCanvas Grid.Row="2" Visibility="Collapsed" x:Name="inkCanvas" />
                <local:AddInImageControl Grid.Row="2" Visibility="Collapsed" x:Name="imageControl"/>
                </Grid>
            
        </ScrollViewer>






        <Grid Grid.Row="0" Grid.RowSpan="2" Background="White" Opacity="0.5" Visibility="Collapsed" Name="MovingGrid" >
        </Grid>
        <!--<Rectangle Grid.Row ="2" x:Name="ResizeRectangleBottomRight" IsHitTestVisible="False"
               Width="20" Height="20" Fill="red"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Rectangle Grid.Row ="2" x:Name="ResizeRectangleBottomLeft" IsHitTestVisible="False"
               Width="20" Height="20" Fill="red"
               VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Rectangle Grid.Row ="0" x:Name="ResizeRectangleTopLeft" IsHitTestVisible="False"
               Width="10" Height="10" Fill="red"
               VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Rectangle Grid.Row ="0" x:Name="ResizeRectangleTopRight" IsHitTestVisible="False"
               Width="10" Height="10" Fill="red"
               VerticalAlignment="Top" HorizontalAlignment="Right"/>-->


    </Grid>
</UserControl>
